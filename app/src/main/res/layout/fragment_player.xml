<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#990033"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/current_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/progressBar2"
            android:text="Current Song" />

        <TextView
            android:id="@+id/textTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/current_song"
            android:layout_centerHorizontal="true"
            android:text="00:00" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTimer"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/skip_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTimer"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@id/play_pause"
            android:src="@drawable/ic_skipfor" />

        <ImageButton
            android:id="@+id/skip_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textTimer"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@id/play_pause"
            android:src="@drawable/ic_skipprev" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/play_pause"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp" />
    </RelativeLayout>
</FrameLayout>